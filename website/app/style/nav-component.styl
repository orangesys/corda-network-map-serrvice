.nav-component
  
.page-title-component
  a
    font-family 'Courier New', Courier, monospace
    font-weight lighter !important

    img 
      height 45px
      padding 5px 10px

  .icon-component
    padding-top 10px
    a
      width 40px !important
      em 
        color #888888
        font-size 2rem
        pointer-events none
      
      &:hover > em
        color #35cebe !important
    
  .svg-icon-component
    svg
      height 32px
      fill #fff
      padding 12px 38px 0 0

      path 
        fill #888

      &:hover   
        cursor pointer
        
        path
          fill #25beae