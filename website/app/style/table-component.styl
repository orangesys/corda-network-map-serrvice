.table-component
  border none
  border-radius 3px

  table
    border-spacing 0px 4px
    color #EEE
    font-size 1.6rem

    td, th
      
      &:first-child
        border-radius 3px 0 0 3px

    thead 
      color #717171
      cursor pointer
      font-size 1.4rem
      text-align center

      img 
        height 12px

      th
        padding 10px
        text-align center
    
    tbody
      height 400px
      overflow-y auto

      td
        color #717171
        padding 5px
        text-align center

        &:nth-child(3n)
          color #35cebe

        &:nth-child(3n + 2)
          color #00EC00
        
        &.true
          background-image url('png/tick.png')
          background-repeat no-repeat
          background-position 45% 50%
        
        button 
          background-color inherit
          border none
          border-radius 50%
          padding 5px 10px

          &:hover > em
            color rgba(255, 0, 0, 0.8)

          em
            color #888
            font-size 24px


    .table-row-component
      border none
      position relative

      td:first-child:hover > .table-tooltip-component
        display: block

    .table-tooltip-component
      background-color #efefef
      border 1px solid #666
      border-radius 3px
      box-shadow: 2px 2px 2px 2px grey
      display none
      font-size: 14px
      padding 2px
      position absolute
      top calc(50% + 11px)


